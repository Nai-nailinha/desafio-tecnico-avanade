{
  "Jwt": {
    "Issuer": "ms-ecommerce",
    "Audience": "ms-ecommerce",
    "Key": "super_secret_dev_key_please_change"
  },
  "ReverseProxy": {
    "Routes": {
      "inventory": {
        "ClusterId": "inventory",
        "Match": { "Path": "/inventory/{**catch-all}" }
      },
      "sales": {
        "ClusterId": "sales",
        "Match": { "Path": "/sales/{**catch-all}" }
      }
    },
    "Clusters": {
      "inventory": {
        "Destinations": {
          "d1": { "Address": "http://localhost:5081/" }
        }
      },
      "sales": {
        "Destinations": {
          "d1": { "Address": "http://localhost:5082/" }
        }
      }
    }
  }
}

